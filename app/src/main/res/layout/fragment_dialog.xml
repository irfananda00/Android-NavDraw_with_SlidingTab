<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Basic Dialog"
        android:id="@+id/btn_basic"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alert Dialog"
        android:id="@+id/btn_alert"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Icon Dialog"
        android:id="@+id/btn_icon"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Menu List Dialog"
        android:id="@+id/btn_menu"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Single Choice List Dialog"
        android:id="@+id/btn_listSingle"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Multi Choice List Dialog"
        android:id="@+id/btn_listMulti"/>

</LinearLayout>